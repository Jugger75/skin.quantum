<includes>
  <include name="View_104_BigMusikCover">

	<control type="image">
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <texture background="true">skin/02.png</texture>
	  <visible>Control.IsVisible(104)</visible>
	</control>
		
	<control type="panel" id="104">
		<posx>110</posx>
        <posy>90</posy>
        <width>1685</width>
        <height>1030</height>
		<onleft>104</onleft>
		<onright>104</onright>
		<onup>2</onup>
		<ondown>104</ondown>
		<viewtype label="BigMusikCover">list</viewtype>
		<scrolltime tween="Quadratic" easing="out">500</scrolltime>
	    <focusposition>1</focusposition>
		<orientation>horizontal</orientation>
		<pagecontrol>60</pagecontrol>
		<scrolltime>400</scrolltime>
		<preloaditems>2</preloaditems>
		<visible>Container.Content(Albums) | Window.IsVisible(MusicFiles) | Window.IsActive(1)</visible>
		<itemlayout height="280" width="280">
		  <control type="image">
			<posx>5</posx>
			<posy>0</posy>
			<width>275</width>
			<height>270</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true">Views/dvd_box_hg.png</texture>
		  </control>
		  <control type="image">
			<posx>20</posx>
			<posy>10</posy>
			<width>250</width>
			<height>250</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true" diffuse="Views/musik_view/diffuse.png">$VAR[PosterThumb]</texture>
	      </control>		
		</itemlayout>
		<focusedlayout height="280" width="280">
		  <control type="image">
			<posx>4</posx>
			<posy>0</posy>
			<width>280</width>
			<height>270</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true">Views/dvd_box_hg.png</texture>
			<animation effect="zoom" start="110" end="120" center="auto" time="300">Focus</animation>
		  </control>
		  <control type="image">
			<posx>20</posx>
			<posy>10</posy>
			<width>250</width>
			<height>250</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true" diffuse="Views/musik_view/diffuse.png">$VAR[PosterThumb]</texture>
			<animation effect="zoom" start="110" end="120" center="auto" time="300">Focus</animation>
		  </control>
	  </focusedlayout>
    </control>
	
	<!--========================================================================================-->
	<!--==================================== MUSIK INFOS =======================================-->
	<!--========================================================================================-->
	<control type="group">	
	  <posx>0</posx>
	  <posy>0</posy>
	  <visible>Control.IsVisible(104)</visible>
	<control type="label">
	  <posx>1775</posx>
	  <posy>1000</posy>
	  <width>950</width>
	  <height>25</height>
	  <label>$INFO[ListItem.Artist] - $INFO[ListItem.Title]</label>
	  <align>right</align>
	  <aligny>center</aligny>
	  <scroll>true</scroll>
	  <font>primal_24_Bold</font>
	  <textcolor>white</textcolor>
	  <shadowcolor>black</shadowcolor>
	</control>
	</control>
	
	 <!-- ================ Musik Logo ==================== -->
	<control type="group">
      <posx>0</posx>
      <posy>0</posy>
	  <visible>Control.IsVisible(104)</visible>
		<control type="image"><!-- Logo -->
		  <description>Logo</description>
		  <posx>130</posx> 
		  <posy>920</posy> 
		  <width>300</width> 
		  <height>160</height>
		  <texture background="true">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Artist]/logo.png</texture>
		  <aspectratio align="center" aligny="center">keep</aspectratio>
		</control>
	</control>
	
    <control type="group">
      <posx>0</posx>
      <posy>8</posy>
      <control type="scrollbar" id="62">
        <posx>0</posx>
        <posy>200</posy>
        <width>38</width>
        <height>525</height>
        <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
        <textureslidernib>ScrollBarV.png</textureslidernib>
        <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
		<onleft>2</onleft>
		<onright>104</onright>
        <showonepage>true</showonepage>
        <orientation>vertical</orientation>
		<visible>Control.IsVisible(104)</visible>
        <visible allowhiddenfocus="true">Control.IsVisible(104) + Control.HasFocus(60)</visible>
      </control>
    </control>
  </include>
</includes>