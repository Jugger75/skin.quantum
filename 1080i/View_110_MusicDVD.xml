<includes>
  <!-- MUSIC VIDEO INFO LIST VIEW -->
  <include name="View_110_MusicDVD">
    
	<control type="image">
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <aspectratio>stretch</aspectratio>
	  <texture>Views/musik_dvd_view/musikdvdview.png</texture>
	  <visible>Control.IsVisible(110)</visible>
	</control>
	<control type="image">
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <aspectratio>stretch</aspectratio>
	  <texture>Views/musik_dvd_view/geruest.png</texture>
	  <visible>Control.IsVisible(110)</visible>
	</control>	

    <control type="group">
      <visible>Control.IsVisible(110)</visible>
      <control type="wraplist" id="110">
        <posx>-20</posx>
        <posy>600</posy>
        <width>2100</width>
        <height>700</height>
        <onleft>110</onleft>
        <onright>110</onright>
        <onup condition="Container.Content(MusicVideos)">ActivateWindow(1121)</onup>
        <ondown>2</ondown>
        <viewtype label="MusicDVD">list</viewtype>
        <pagecontrol>615</pagecontrol>
        <scrolltime>200</scrolltime>
		<focusposition>4</focusposition>
		<orientation>horizontal</orientation>
		<preloaditems>2</preloaditems>
        <visible>Container.Content(MusicVideos)</visible>
        <itemlayout height="330" width="210">
		  <control type="image">
			<posx>-7</posx>
			<posy>48</posy>
			<width>214</width>
			<height>304</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true">Views/dvd_box_hg.png</texture>
			<visible>!Skin.HasSetting(coveroff110)</visible>
		  </control>
		  <control type="image">
			<posx>5</posx>
			<posy>60</posy>
			<width>190</width>
			<height>280</height>
			<aspectratio aligny="bottom">stretch</aspectratio>
			<texture  background="true" diffuse="Views/dvd_overlay.png">$INFO[ListItem.Icon]</texture>
			<visible>!Skin.HasSetting(coveroff110)</visible>
		  </control>
        </itemlayout>
        <focusedlayout height="330" width="280">
		  <control type="image">
			<posx>18</posx>
			<posy>64</posy>
			<width>235</width>
			<height>340</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true">Views/dvd_box_hg.png</texture>
			<animation effect="zoom" start="0,0,200,300" end="0,0,295,410" center="auto" tween="sine" time="300">Focus</animation>
			<visible>!Skin.HasSetting(coveroff110)</visible>
		  </control>
		  <control type="image">
			<posx>30</posx>
			<posy>80</posy>
			<width>210</width>
			<height>310</height>
			<aspectratio aligny="bottom">stretch</aspectratio>
			<texture  background="true" diffuse="Views/dvd_overlay.png">$INFO[ListItem.Icon]</texture>
			<animation effect="zoom" start="0,0,200,300" end="0,0,263,378" center="auto" tween="sine" time="300">Focus</animation>
			<visible>!Skin.HasSetting(coveroff110)</visible>
		  </control>		  
          <control type="image">
            <posx>205</posx>
            <posy>45</posy>
            <width>60</width>
            <height>54</height>
            <texture>$INFO[ListItem.Overlay]</texture>
			<animation effect="fade" time="400" delay="400">Focus</animation>
			<visible>!Skin.HasSetting(coveroff110)</visible>
          </control>
        </focusedlayout>
      </control>
      <control type="group">
        <control type="scrollbar" id="615">
          <posx>50</posx>
          <posy>125</posy>
          <width>400</width>
          <height>20</height>
          <texturesliderbackground border="0,14,0,14">ScrollBarH.png</texturesliderbackground>
          <texturesliderbar border="2,14,2,14">ScrollBarH_bar.png</texturesliderbar>
          <texturesliderbarfocus border="2,14,2,14">ScrollBarH_bar_focus.png</texturesliderbarfocus>
          <textureslidernib>ScrollBarNib.png</textureslidernib>
          <textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
          <onleft>110</onleft>
          <onright>2</onright>
          <showonepage>false</showonepage>
          <orientation>horizontal</orientation>
          <visible allowhiddenfocus="true">Control.IsVisible(110) + Control.HasFocus(60)</visible>
        </control>
		
		<control type="group">
          <posx>0</posx>
          <posy>0</posy>
		  <visible>Control.IsVisible(110)</visible>
		<control type="label">
          <posx>70</posx>
          <posy>185</posy>
          <width>390</width>
          <height>38</height>
          <label>$INFO[ListItem.Artist]</label>
          <scroll>true</scroll>
          <align>left</align>
          <aligny>center</aligny>
          <font>primal_20_Bold</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
		  <visible>!Player.HasVideo</visible>
        </control>
		<control type="textbox">
		  <description>Movie Plot</description>
	      <posx>70</posx>
		  <posy>230</posy>
		  <width>390</width>
		  <height>170</height>
		  <font>primal_16</font>
	      <align>justify</align>
		  <textcolor>white</textcolor>
		  <shadowcolor>black</shadowcolor>
		  <label>$INFO[ListItem.Plot]</label>
		  <autoscroll time="3000" delay="8000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
		  <visible>!Player.HasVideo</visible>
		</control>
		<control type="label">
          <posx>1440</posx>
          <posy>190</posy>
          <width>390</width>
          <height>25</height>
          <label>$INFO[ListItem.Title,[COLOR=blue]$LOCALIZE[60248]: [/COLOR]]</label>
          <scroll>true</scroll>
		  <scrollspeed>30</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
          <align>left</align>
          <aligny>center</aligny>
          <font>primal_18</font>
          <textcolor>white</textcolor>
		  <shadowcolor>black</shadowcolor>
          <wrapmultiline>true</wrapmultiline>
        </control>
        <control type="label">
          <posx>1440</posx>
          <posy>230</posy>
          <width>390</width>
          <height>25</height>
          <label>$INFO[ListItem.Duration,[COLOR=blue]$LOCALIZE[60253]: [/COLOR]] min</label>
          <scroll>true</scroll>
		  <scrollspeed>30</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
          <align>left</align>
          <aligny>center</aligny>
          <font>primal_18</font>
          <textcolor>white</textcolor>
		  <shadowcolor>black</shadowcolor>
          <wrapmultiline>true</wrapmultiline>
        </control>
        <control type="label">
          <posx>1440</posx>
          <posy>270</posy>
          <width>390</width>
          <height>25</height>
          <label>$INFO[ListItem.Album,[COLOR=blue]$LOCALIZE[60201]: [/COLOR]]</label>
          <wrapmultiline>true</wrapmultiline>
          <align>left</align>
          <aligny>center</aligny>
          <font>primal_18</font>
          <textcolor>white</textcolor>
		  <shadowcolor>black</shadowcolor>
		  <scroll>true</scroll>
		  <scrollspeed>30</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
        </control>
		<control type="label">
          <description>Year txt</description>
          <posx>1440</posx>
          <posy>310</posy>
          <width>390</width>
          <height>25</height>
          <label>$INFO[listitem.Year,[COLOR=blue]$LOCALIZE[31053]: [/COLOR]]</label>
		  <scroll>true</scroll>
		  <scrollspeed>30</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
          <align>left</align>
          <aligny>center</aligny>
          <font>primal_18</font>
          <textcolor>white</textcolor>
		  <shadowcolor>black</shadowcolor>
        </control>
		</control>
		<control type="videowindow" id="8">
		  <posx>52</posx>
		  <posy>139</posy>
		  <width>428</width>
		  <height>308</height>
		  <align>left</align>
		</control>
		<control type="image">
		  <posx>0</posx>
		  <posy>365</posy>
		  <width>1920</width>
		  <height>244</height>
		  <aspectratio>stretch</aspectratio>
		  <texture>Views/musik_dvd_view/monitor_klein.png</texture>
		  <visible>Control.IsVisible(110)</visible>
		</control>
		<control type="grouplist">
          <description>Media Codec Flagging Images</description>
          <posx>520</posx>
          <posy>20</posy>
          <width>800</width>
		  <align>left</align>
          <align>center</align>
          <itemgap>0</itemgap>
          <orientation>horizontal</orientation>
          <include>VideoCodecFlaggingConditions</include>
        </control>
		<control type="grouplist">
          <description>Media Codec Flagging Images</description>
          <posx>1050</posx>
          <posy>20</posy>
          <width>800</width>
		  <align>left</align>
          <align>center</align>
          <itemgap>0</itemgap>
          <orientation>horizontal</orientation>
          <include>AudioCodecFlaggingConditions</include>
		  <include>AspectCodecFlaggingConditions</include>
        </control>
		
	   <control type="group">
		<control type="image">
		  <posx>125</posx>
		  <posy>10</posy>
		  <width>1696</width>
		  <height>624</height>
		  <aspectratio>stretch</aspectratio>
		  <texture>Views/musik_dvd_view/licht.png</texture>
		  <visible>Control.IsVisible(110)</visible>
		</control>
		<control type="image">
		  <posx>345</posx>
		  <posy>115</posy>
		  <width>1225</width>
		  <height>463</height>
		  <aspectratio>stretch</aspectratio>
		  <texture>Views/musik_dvd_view/licht2.png</texture>
		  <visible>Control.IsVisible(110) + !Skin.HasSetting(light110)</visible>
		</control>
	   </control>
		
		<control type="multiimage">
		  <posx>1609</posx>
		  <posy>410</posy>
		  <width>276</width>
		  <height>159</height>
		  <aspectratio>stretch</aspectratio>
		  <fadetime>4000</fadetime>
		  <timeperimage>2000</timeperimage>
		  <imagepath background="true">$INFO[ListItem.Path]\extrafanart</imagepath>
		  <animation effect="rotate" end="-2,5" center="auto" loop="false" reversible="false" condition="!Player.ShowInfo">Conditional</animation>
		  <visible>Control.IsVisible(110)</visible>
		</control>
		
	   <control type="group">
	   <visible>Skin.HasSetting(light110)</visible>
		<control type="multiimage">
		  <posx>898</posx>
		  <posy>10</posy>
		  <width>118</width>
		  <height>328</height>
		  <imagepath>Views/musik_dvd_view/licht/oben/</imagepath>
		  <timeperimage>1200</timeperimage>
		  <randomize>true</randomize>
		  <fadetime>10</fadetime>
		  <visible>Player.Playing</visible>
		  <colordiffuse>-</colordiffuse>
		  <visible>Control.IsVisible(110)</visible>
	    </control>
		<control type="multiimage">
		  <posx>360</posx>
		  <posy>270</posy>
		  <width>605</width>
		  <height>286</height>
		  <imagepath>Views/musik_dvd_view/licht/links/</imagepath>
		  <timeperimage>1200</timeperimage>
		  <randomize>true</randomize>
		  <fadetime>10</fadetime>
		  <visible>Player.Playing</visible>
		  <colordiffuse>-</colordiffuse>
		  <visible>Control.IsVisible(110)</visible>
	    </control>
		<control type="multiimage">
		  <posx>1050</posx>
		  <posy>100</posy>
		  <width>505</width>
		  <height>473</height>
		  <imagepath>Views/musik_dvd_view/licht/rechts/</imagepath>
		  <timeperimage>1200</timeperimage>
		  <randomize>true</randomize>
		  <fadetime>10</fadetime>
		  <visible>Player.Playing</visible>
		  <colordiffuse>-</colordiffuse>
		  <visible>Control.IsVisible(110)</visible>
	    </control>
	   </control>
	   
	    <control type="image">
		  <posx>15</posx>
		  <posy>890</posy>
		  <width>1880</width>
		  <height>186</height>
		  <aspectratio>stretch</aspectratio>
		  <texture>Views/musik_dvd_view/boxen.png</texture>
		  <visible>Control.IsVisible(110)</visible>
		</control>
		<control type="image"><!-- Movie Logo -->
		  <description>Logo</description>
		  <posx>24</posx> 
		  <posy>390</posy> 
		  <width>270</width> 
		  <height>200</height>
		  <texture>$INFO[ListItem.Path,,logo.png]</texture>
		  <aspectratio align="center" aligny="center">keep</aspectratio>
		  <animation effect="rotate" end="2,5" center="auto" loop="false" reversible="false" condition="!Player.ShowInfo">Conditional</animation>
		  <visible>Control.IsVisible(110) + !Player.HasMedia</visible>
		</control>
		<control type="image"><!-- Movie Logo Show -->
		  <description>Logo</description>
		  <posx>24</posx> 
		  <posy>390</posy> 
		  <width>270</width> 
		  <height>200</height>
		  <texture>$INFO[ListItem.Path,,logo.png]</texture>
		  <aspectratio align="center" aligny="center">keep</aspectratio>
		  <animation effect="rotate" start="-10,0" end="15,5" center="auto" loop="false" reversible="false" pulse="true" time="3000" condition="Player.Playing">Conditional</animation>
		  <animation effect="zoom" start="90" end="100" center="auto" loop="false" reversible="false" pulse="true" time="2000" condition="Player.Playing">Conditional</animation>
		  <animation effect="slide" start="0,0" end="0,-10" time="500" tween="cubic" pulse="true" condition="Player.Playing">conditional</animation>
		  <visible>Control.IsVisible(110) + Player.HasMedia</visible>
		</control>		
      </control>
    </control>
  </include>
</includes>