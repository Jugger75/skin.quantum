<includes>
  <include name="View_107_MusikCoverList">
  
    <control type="image">
	  <animation effect="slide" start="0,0" end="120,-200" time="700" tween="sine" easing="out" reversible="false" condition="Player.HasAudio">Conditional</animation>
	  <animation effect="rotate" end="-360" center="auto" time="10000" loop="true" reversible="false" condition="Player.HasAudio">Conditional</animation>
	  <animation effect="rotate" end="-360" center="auto" time="10000" loop="true" reversible="false" condition="Player.HasAudio">Conditional</animation>
	  <posx>-350</posx>
      <posy>600</posy>
	  <width>450</width>
	  <height>450</height>
	  <texture fallback="cdartdefault.png">$INFO[Player.FolderPath]cdart.png</texture>
	  <aspectratio align="bottom">keep</aspectratio>
	  <visible>Skin.HasSetting(MusicCDArt)</visible>
	  <visible>Control.IsVisible(107)</visible>
	</control>
	
    <control type="image">
	  <include>ViewsWideAnimation</include>
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <texture>Views/view02.png</texture>
	  <visible>Control.IsVisible(107)</visible>
	</control>
	<control type="image">
	  <include>ViewsAnimation</include>
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <texture>Views/view01.png</texture>
	  <visible>Control.IsVisible(107)</visible>
	</control>

	<control type="wraplist" id="107">
	    <include>ViewsAnimation</include>
		<posx>892</posx>
        <posy>725</posy>
        <width>1020</width>
        <height>1200</height>
		<onleft>107</onleft>
		<onright>107</onright>
		<onup>62</onup>
		<ondown>9000</ondown>
		<viewtype label="BigMusikCoverList">list</viewtype>
		<scrolltime tween="quadratic" easing="out">400</scrolltime>
	    <focusposition>0</focusposition>
		<orientation>horizontal</orientation>
		<pagecontrol>60</pagecontrol>
		<scrolltime>200</scrolltime>
		<preloaditems>2</preloaditems>
		<visible>Container.Content(Songs) | Container.Content(Albums)</visible>
		<itemlayout height="400" width="345">
		<control type="group">
		  <posx>0</posx>
		  <posy>0</posy>
		<control type="image">
          <posx>-6</posx>
          <posy>5</posy>
          <width>332</width>
          <height>334</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true">Views/musik_view/papercover_unten.png</texture>
        </control>
		<control type="image">
          <posx>0</posx>
          <posy>12</posy>
          <width>320</width>
          <height>320</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true" diffuse="Views/musik_view/papercover.png">$VAR[PosterThumb]</texture>
        </control>
		</control>	
		</itemlayout>
		<focusedlayout height="400" width="345">
		<control type="group">	
		<posx>0</posx>
		<posy>0</posy>
		<control type="image">
          <posx>-6</posx>
          <posy>5</posy>
          <width>332</width>
          <height>334</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true">Views/musik_view/papercover_unten.png</texture>
        </control>
		<control type="image">
          <posx>0</posx>
          <posy>12</posy>
          <width>320</width>
          <height>320</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true" diffuse="Views/musik_view/papercover.png">$VAR[PosterThumb]</texture>
        </control>
	   </control>
	  </focusedlayout>
    </control>
	
	<!--========================================================================================-->
	<!--================================= LOGO UND FANART ======================================-->
	<!--========================================================================================-->
	<control type="group">
      <posx>0</posx>
      <posy>0</posy>
	  <visible>Control.IsVisible(107)</visible>
		<control type="image">
		  <description>Logo</description>
		  <posx>200</posx> 
		  <posy>690</posy> 
		  <width>400</width> 
		  <height>200</height>
		  <texture background="true">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Artist]/logo.png</texture>
		  <aspectratio align="center" aligny="center">keep</aspectratio>
		</control>
	</control>
	
	
	<!--========================================================================================-->
	<!--==================================== MUSIK INFOS =======================================-->
	<!--========================================================================================-->
	<control type="group">	
	  <posx>0</posx>
	  <posy>660</posy>
	  <visible>Control.IsVisible(107)</visible>
	<control type="label">
	  <posx>880</posx>
	  <posy>0</posy>
	  <width>950</width>
	  <height>25</height>
	  <label>$INFO[ListItem.Artist] - $INFO[ListItem.Title]</label>
	  <align>left</align>
	  <aligny>center</aligny>
	  <scroll>true</scroll>
	  <font>primal_20_Bold</font>
	  <textcolor>white</textcolor>
	  <shadowcolor>black</shadowcolor>
	</control>
	</control>
	
	<!--========================================================================================-->
	<!--=============================== MUSIK INFOS PLAYED =====================================-->
	<!--========================================================================================-->
	<control type="group">	
	  <posx>-110</posx>
	  <posy>170</posy>
	  <visible>Control.IsVisible(107)</visible>
	<control type="progress">
	  <description>Progressbar</description>
	  <posx>233</posx>
	  <posy>735</posy>
	  <width>592</width>
	  <height>15</height>
	  <info>Player.Progress</info>
	  <visible>Player.HasAudio</visible>
	</control>
	<control type="label">
	  <description>Title label</description>
	  <posx>210</posx>
	  <posy>780</posy>
	  <height>45</height>
	  <width>630</width>
	  <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title] - $INFO[MusicPlayer.TimeRemaining]</label>
	  <align>center</align>
	  <aligny>center</aligny>
	  <font>primal_20</font>
	  <textcolor>white</textcolor>
	  <shadowcolor>black</shadowcolor>
	  <scroll>true</scroll>
	  <visible>Player.HasAudio</visible>
	</control>
	<control type="label">
	  <description>Title label</description>
	  <posx>210</posx>
	  <posy>825</posy>
	  <height>45</height>
	  <width>630</width>
	  <label>Next: $INFO[MusicPlayer.offset(1).Title]</label>
	  <align>center</align>
	  <aligny>center</aligny>
	  <font>primal_20</font>
	  <textcolor>white</textcolor>
	  <shadowcolor>black</shadowcolor>
	  <scroll>true</scroll>
	  <visible>Player.HasAudio</visible>
	</control>
	</control>
	
    <control type="group">
      <posx>450</posx>
      <posy>500</posy>
      <control type="scrollbar" id="62">
        <posx>0</posx>
        <posy>100</posy>
        <width>1000</width>
        <height>20</height>
        <texturesliderbackground border="14,0,14,0">ScrollBarV.png</texturesliderbackground>
		<textureslidernib>ScrollBarV_bar.png</textureslidernib>
		<textureslidernibfocus>ScrollBarV.png</textureslidernibfocus>
		<onup>9000</onup>
		<ondown>107</ondown>
        <showonepage>false</showonepage>
        <orientation>horizontal</orientation>
		<visible>Control.IsVisible(107)</visible>
        <visible allowhiddenfocus="true">Control.IsVisible(107) + Control.HasFocus(62)</visible>
      </control>
    </control>
  </include>
</includes>