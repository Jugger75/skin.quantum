	<!-- ===================================================================================== -->
	<!-- ======================================= SONSTIGES =================================== -->
	<!-- ===================================================================================== -->
	<include name="RecentlyAddedMoreAnimation">
        <animation type="WindowOpen" reversible="false">
          <effect type="fade" start="0" end="100" time="1000" />
        </animation>
        <animation type="WindowClose" reversible="false">
          <effect type="fade" start="100" end="0" time="1000" />
        </animation>
	</include>
	<include name="AnimationMusic180">
        <animation type="Focus" reversible="false" >
		<effect type="rotatey" center="145,0" start="0" end="180" time="400" delay="0"/>
		</animation>
    </include>
	<include name="AnimationMusicSlide">
        <animation effect="rotate" end="20" center="auto" time="0" reversible="false" condition="!Player.Paused">Conditional</animation>
