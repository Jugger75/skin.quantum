      </control>
      <control type="image">
        <description>Rating value</description>
        <posx>120</posx>
        <posy>472</posy>
        <align>left</align>
        <width>300</width>
        <height>60</height>
        <texture></texture>
        <!-- Games Genreflags Future here  -->
      </control>
      <control type="image">
        <width>180</width>
        <height>86</height>
        <posx>0</posx>
        <posy>450</posy>
        <aspectratio align="center">keep</aspectratio>
        <texture border="2">$INFO[Skin.String(Studios_Folder_Path)]$INFO[ListItem.Studio,,.png]</texture>
