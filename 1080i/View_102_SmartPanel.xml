<includes>
  <include name="View_102_SmartPanel">
    <control type="image">
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <texture>skin/slidermenu.png</texture>
	  <visible>Control.IsVisible(102)</visible>
	</control>
	
	<!-- ================ Musik Infos ==================== -->
	<control type="group">
	  <include>Views2Animation</include>
      <posx>0</posx>
      <posy>0</posy>
	  <visible>Control.IsVisible(102)</visible>
	  <control type="label">
          <posx>50</posx>
          <posy>450</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Artist]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_22</font>
          <textcolor>blue</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
		<control type="label">
          <posx>50</posx>
          <posy>500</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Album,[COLOR=blue]Album:[/COLOR]]</label>
          <wrapmultiline>false</wrapmultiline>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
		<control type="label">
          <posx>50</posx>
          <posy>540</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Genre,[COLOR=blue]Genre:[/COLOR]]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <wrapmultiline>false</wrapmultiline>
          <visible>Container.Content(Albums)</visible>
        </control>
		<control type="label">
          <description>Year txt</description>
          <posx>50</posx>
          <posy>580</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[listitem.Year,[COLOR=blue]Year:[/COLOR]]</label>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
        </control>
		<control type="image">
          <description>fanart image</description>
          <posx>40</posx>
          <posy>140</posy>
          <width>360</width>
		  <height>250</height>
		  <texture background="true" fallback="skin/fanart_fallback.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
		  <bordertexture border="10">Thumbborder.png</bordertexture>
          <bordersize>10</bordersize>
		  <fadetime>300</fadetime>
        </control>
	</control>
	
    <!-- ================ Addon Infos ==================== -->
	<control type="group">
	    <include>Views2Animation</include>
        <posx>0</posx>
        <posy>0</posy>
		<visible>Container.Content(Files) | Container.Content(Addons)</visible>
	    <visible>Control.IsVisible(102)</visible>
	    <control type="label">
          <posx>40</posx>
          <posy>450</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Label]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_22</font>
          <textcolor>blue</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
		<control type="textbox">
          <description>Plot Textbox</description>
          <posx>40</posx>
          <posy>650</posy>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <width>360</width>
          <height>290</height>
          <label>$INFO[ListItem.Property(Addon.Description)]</label>
          <align>justify</align>
          <autoscroll delay="15000" time="2000" repeat="10000" />
        </control>
		<control type="label">
          <posx>40</posx>
          <posy>490</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Property(Addon.Version),[COLOR=blue]Version:[/COLOR] ]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
		<control type="label">
          <posx>40</posx>
          <posy>530</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Property(Addon.Creator),[COLOR=blue]Creator:[/COLOR] ]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
		<control type="label">
          <posx>40</posx>
          <posy>570</posy>
          <width>400</width>
          <height>38</height>
          <label>$INFO[ListItem.Property(Addon.Type),[COLOR=blue]Type:[/COLOR] ]</label>
          <scroll>true</scroll>
          <align>left</align>
          <font>primal_18</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    </control>
    <control type="group">
      <posx>0</posx>
      <posy>0</posy>
      <control type="scrollbar" id="62">
        <posx>0</posx>
        <posy>200</posy>
        <width>38</width>
        <height>525</height>
        <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
        <textureslidernib>ScrollBarV.png</textureslidernib>
        <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
		<onleft>2</onleft>
		<onright>102</onright>
        <showonepage>true</showonepage>
        <orientation>vertical</orientation>
		<visible>Control.IsVisible(102)</visible>
        <visible allowhiddenfocus="true">Control.IsVisible(102) + Control.HasFocus(60)</visible>
      </control>
	  
	<control type="group">
	  <visible>Control.IsVisible(102)</visible>
	  <control type="image">
		<include>ViewsAnimation</include>
		<posx>0</posx>
		<posy>0</posy>
		<width>1920</width>
		<height>1080</height>
		<texture>skin/home_panel.png</texture>
	  </control>
	  <control type="image">
		<posx>0</posx>
		<posy>0</posy>
		<width>1920</width>
		<height>108</height>
		<texture>skin/header.png</texture>
	  </control>
    </control>
	
	<control type="panel" id="102">
	    <include>ViewsAnimation</include>
		<posx>470</posx>
        <posy>100</posy>
        <width>1300</width>
        <height>840</height>
		<onleft>62</onleft>
		<onright condition="Container.Content(Albums) | Container.Content(Artists) | Window.IsVisible(MusicFiles) | Container.Content(Addons) | Window.IsActive(1)">ActivateWindow(1121)</onright>
		<onup>102</onup>
		<ondown>102</ondown>
		<viewtype label="SmartPanel">panel</viewtype>
		<orientation>vertical</orientation>
		<pagecontrol>60</pagecontrol>
		<scrolltime>200</scrolltime>
		<preloaditems>2</preloaditems>
		<visible>Container.Content(Addons) | Window.IsActive(1)</visible>
		<itemlayout height="210" width="210">
		<control type="group">
		  <posx>0</posx>
		  <posy>0</posy>
		  <control type="image">
          <posx>15</posx>
          <posy>22</posy>
          <width>180</width>
          <height>180</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true">$VAR[PosterThumb]</texture>
		  <bordertexture border="10">Thumbborder.png</bordertexture>
          <bordersize>10</bordersize>
        </control>
		</control>		
		</itemlayout>
		<focusedlayout height="210" width="210">
		<control type="group">	
		<!--<animation type="Focus" condition="Container(102).Row(1) | Container(102).Row(2) | Container(102).Row(3) | Container(102).Row(0)" reversible="false">
           <effect type="zoom" center="75,70" start="100" end="105" time="400" easing="out" tween="cubic" reversible="false"/>
        </animation>-->
		<posx>0</posx>
		<posy>0</posy>
		<control type="image">
          <posx>15</posx>
          <posy>22</posy>
          <width>180</width>
          <height>180</height>
          <aspectratio>stretch</aspectratio>
          <texture background="true">$VAR[PosterThumb]</texture>
		  <bordertexture border="10">Thumbborder2.png</bordertexture>
          <bordersize>10</bordersize>
        </control>
		</control>
	  </focusedlayout>
     </control>
    </control>
  </include>
</includes>