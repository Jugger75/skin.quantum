<includes>
  <include name="View_55_FileMode">
    <!-- BACKGROUND PANEL FOR LIST VIEW (not sure why this is here, but it works) -->
    <control type="image">
	  <posx>0</posx>
	  <posy>0</posy>
	  <width>1920</width>
	  <height>1080</height>
	  <texture>skin/slidermenu.png</texture>
	  <visible>Control.IsVisible(55)</visible>
	</control>
	
	<control type="group">
        <posx>15</posx>
        <posy>560</posy>
		<include>Views2Animation</include>
        <visible>Control.IsVisible(55)</visible>
        <control type="image">
          <posx>0</posx>
          <posy>-420</posy>
          <width>380</width>
          <height>500</height>
          <aspectratio aligny="center">keep</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture background="true">$VAR[PosterThumb]</texture>
          <bordertexture border="10">Thumbborder.png</bordertexture>
		  <bordersize>10</bordersize>
          <visible>!Container.Content(Genres)</visible>
        </control>
        <!-- GenreFanart Mod -->
        <control type="image">
          <posx>0</posx>
          <posy>-420</posy>
          <width>390</width>
          <height>510</height>
          <aspectratio aligny="center">keep</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture fallback="special://skin/extras/moviegenresposter/default.jpg">special://skin/extras/moviegenresposter/$INFO[ListItem.Label].jpg</texture>
          <bordertexture border="6">contentpanelvertical.png</bordertexture>
          <bordersize>6</bordersize>
          <visible>Container.Content(Genres) + Window.IsVisible(VideoLibrary)</visible>
        </control>
        <control type="image">
          <posx>1230</posx>
          <posy>-420</posy>
          <width>240</width>
          <height>360</height>
          <aspectratio aligny="center">keep</aspectratio>
          <fadetime>IconCrossfadeTime</fadetime>
          <texture background="true" fallback="special://skin/extras/musicgenres/default.png">special://skin/extras/musicgenres/$INFO[ListItem.Label].png</texture>
          <visible>Container.Content(Genres) + Window.IsVisible(MusicLibrary)</visible>
        </control>
      </control>
	  
	<control type="group">
	  <visible>Control.IsVisible(55)</visible>
	  <control type="image">
		<include>ViewsAnimation</include>
		<posx>0</posx>
		<posy>0</posy>
		<width>1920</width>
		<height>1080</height>
		<texture>skin/home_panel.png</texture>
	  </control>
	  <control type="image">
		<posx>0</posx>
		<posy>0</posy>
		<width>1920</width>
		<height>108</height>
		<texture>skin/header.png</texture>
	  </control>
	</control>

    <control type="group">
      <include>ViewsAnimation</include>
      <visible>Control.IsVisible(55)</visible>
      <include>VisibleFadeEffect</include>
      <control type="list" id="55">
        <posx>270</posx>
        <posy>120</posy>
        <width>1700</width>
        <height>815</height>
		<onleft>2</onleft>
		<onright>55</onright>
        <onup>55</onup>
        <ondown>55</ondown>
        <viewtype label="535">list</viewtype>
        <pagecontrol>60</pagecontrol>
        <scrolltime>200</scrolltime>
        <itemlayout height="60" width="1000">
          <control type="label">
            <posx>270</posx>
            <posy>20</posy>
            <width>720</width>
            <height>60</height>
            <font>primal_22</font>
            <textcolor>white</textcolor>
            <selectedcolor>blue</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <posx>1250</posx>
            <posy>20</posy>
            <width>210</width>
            <height>60</height>
            <font>primal_22</font>
            <textcolor>white</textcolor>
            <selectedcolor>blue</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label2]</label>
            <animation effect="slide" start="0,0" end="30,0" delay="0" time="0" condition="[Window.IsVisible(VideoLibrary) | Window.IsVisible(VideoFiles)]">conditional</animation>
          </control>
        </itemlayout>
        <focusedlayout height="60" width="1000">
		  <control type="image">
			<include>ViewsAnimation</include>
			<posx>163</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>100</height>
			<texture>Button/button_leiste.png</texture>		
			<visible>Control.IsVisible(55)</visible>
		  </control>
          <control type="label">
            <posx>270</posx>
            <posy>20</posy>
            <width>720</width>
            <height>60</height>
            <font>primal_22</font>
            <textcolor>blue</textcolor>
            <selectedcolor>blue</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label">
            <posx>1250</posx>
            <posy>20</posy>
            <width>210</width>
            <height>60</height>
            <font>primal_22</font>
            <textcolor>white</textcolor>
            <selectedcolor>blue</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Label2]</label>
            <animation effect="slide" start="0,0" end="30,0" delay="0" time="0" condition="[Window.IsVisible(VideoLibrary) | Window.IsVisible(VideoFiles)]">conditional</animation>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>390</posx>
        <posy>150</posy>
        <width>20</width>
        <height>790</height>
        <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
        <texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
        <texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
        <textureslidernib>ScrollBarNib.png</textureslidernib>
        <textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
        <onleft>9000</onleft>
        <onright>55</onright>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <visible>Control.IsVisible(55)</visible>
      </control>
    </control>
  </include>
</includes>