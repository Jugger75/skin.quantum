      </control>
      <control type="group">
        <posx>-90</posx>
        <control type="image">
          <posx>1050</posx>
          <posy>60</posy>
          <width>810</width>
          <height>454</height>
          <aspectratio aligny="bottom">stretch</aspectratio>
          <fadetime>FanartCrossfadeTime</fadetime>
          <texture fallback="skin/fanart_fallback.png" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
