          <bordersize>8</bordersize>
          <visible>!Player.HasVideo | !Skin.HasSetting(videowindowglobal)</visible>
        </control>
        <control type="videowindow" id="8">
          <posx>1071</posx>
          <posy>84</posy>
          <width>770</width>
          <height>405</height>
          <align>right</align>
          <visible>Skin.Hassetting(videowindowglobal)</visible>
          <visible>Control.IsVisible(590)</visible>
          <visible>!IsEmpty(ListItem.Thumb)</visible>
        </control>
        <control type="label">
          <description>Title label</description>
          <posx>1215</posx>
          <posy>442</posy>
          <height>45</height>
          <width>495</width>
          <label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.Year,[COLOR=blue] (,)[/COLOR]]</label>
          <align>center</align>
          <aligny>center</aligny>
          <font>cirrus_20</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <visible>Skin.HasSetting(videowindowglobal)</visible>
          <visible>Player.HasVideo</visible>
          <visible>Control.IsVisible(590)</visible>
          <visible>!Skin.HasSetting(videonotitle)</visible>
          <visible>!IsEmpty(ListItem.Thumb)</visible>
        </control>
        <control type="grouplist">
          <description>Media Codec Flagging Images</description>
          <posx>1875</posx>
          <posy>60</posy>
          <width>150</width>
          <height>450</height>
          <align>center</align>
          <itemgap>45</itemgap>
