<includes>
    <!-- ===================================================================================== -->
	<!-- ================================== HOME ANIMATION =================================== -->
	<!-- ===================================================================================== -->
	<include name="HomeAnimation">
        <animation type="WindowOpen">
			<effect type="slide" time="700" start="800,0"  end="0,0" tween="sine" easing="out" reversible="false"/>
		    <effect type="fade" time="600" start="0" end="100" reversible="false"/>
		</animation>			
		<animation type="WindowClose">
			<effect type="slide" time="500" start="0,0" end="800,0" tween="sine" easing="in" reversible="false" />
			<effect type="fade" time="600" start="100" end="0" />
		</animation>
	</include>		
